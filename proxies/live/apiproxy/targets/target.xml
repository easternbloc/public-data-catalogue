<TargetEndpoint name="public-data-catalogue-target">
  <PreFlow>
    <Request>
      <Step>
        <Name>VerifyApiKey.FromHeader</Name>
      </Step>
      <Step>
        <Name>AssignMessage.RemoveClientApiKeyHeader</Name>
      </Step>
      <Step>
        <Name>Quota</Name>
      </Step>
      <Step>
        <Name>SpikeArrest</Name>
      </Step>
    </Request>
  </PreFlow>
    <HTTPTargetConnection>
      <SSLInfo>
        <Enabled>true</Enabled>
      </SSLInfo>
      <LoadBalancer>
        <Server name="{{ HRDC_TARGET_SERVER }}" />
      </LoadBalancer>
    </HTTPTargetConnection>
    <DefaultFaultRule>
     <Step>
      <Name>AssignMessage.Errors.Defaults</Name>
     </Step>
     <Step>
      <Name>AssignMessage.Errors.CatchAllMessage</Name>
     </Step>
   </DefaultFaultRule>
</TargetEndpoint>